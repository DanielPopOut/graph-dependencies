{
  "name": "Graph dependency for Trello and Github",
  "version": "2.0",
  "description": "Create a simple graph dep on trello and github projects",
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "permissions": ["storage"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.trello.com/*"],
      "js": ["trelloManager.js", "graphdep.js"]
    },
    {
      "matches": ["*://github.com/*/projects/*"],
      "js": ["githubManager.js", "graphdep.js"]
    }
  ]
}
